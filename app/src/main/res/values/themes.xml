<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Quitamos la barra de accion -->
    <style name="Theme.BeFriend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/azul1</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/azul1</item>
    </style>

    <style name="Theme.BeFriend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BeFriend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BeFriend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Jamao" parent="Theme.BeFriend">
        <item name="android:windowBackground">@drawable/gradient_background</item>

    </style>
</resources>