<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpFragment">


    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="196dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/circulo_t2"
        android:gravity="center"
        android:lineSpacingExtra="-30sp"
        android:text="Sign up"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textAlignment="center"
        android:textColor="@color/azul1"
        android:textSize="60sp"
        android:maxLength="20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Nombre"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/azul1"
            android:maxLength="30"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_local_post_office_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/azul1"
            android:maxLength="50"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/azul1"
            android:maxLength="50"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="Crear cuenta"
            android:textColor="@color/azul1" />

    </LinearLayout>

</RelativeLayout>