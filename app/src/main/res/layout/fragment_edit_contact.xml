<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical"
    tools:context=".NewContactoFragment"
    android:background="@drawable/gradient_background3"
>


    <ImageView
        android:id="@+id/ivCircle6"
        android:layout_width="604dp"
        android:layout_height="620dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-302dp"
        android:layout_marginBottom="-52dp"
        android:alpha="0.2"
        app:srcCompat="@drawable/circulo_t1" />

    <ImageView
        android:id="@+id/ivCircle7"
        android:layout_width="296dp"
        android:layout_height="296dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-112dp"
        android:layout_marginTop="-36dp"
        android:alpha="0.2"
        app:srcCompat="@drawable/circulo_t1" />

    <ImageView
        android:id="@+id/ivCircle8"
        android:layout_width="704dp"
        android:layout_height="595dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-436dp"
        android:layout_marginTop="-36dp"
        android:layout_marginBottom="-290dp"
        android:alpha="0.2"
        app:srcCompat="@drawable/circulo_t1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnDeleteContact"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/ivFotoContacto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/azul1"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="-35dp"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:textColor="@color/azul1"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etCumpleanos"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_cake_24"
            android:drawablePadding="20dp"
            android:editable="true"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="CumpleaÃ±os"
            android:inputType="text"
            android:textColor="@color/azul1"
            android:background="@drawable/logging_field_background"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <EditText
            android:id="@+id/etNotas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_notes_24"
            android:drawablePadding="20dp"
            android:textSize="22sp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Notas"
            android:inputType="textPersonName"
            android:textColor="@color/azul1"
            android:maxLength="200"
            android:background="@drawable/logging_field_background"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>




        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="80dp"
            android:id="@+id/btnGuardarContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/azul1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>

</RelativeLayout>