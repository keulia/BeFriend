<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="196dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circulo_t2"
            android:fontFamily="@font/nunito_sans_semibold"
            android:gravity="center"
            android:lineSpacingExtra="-30sp"
            android:text="Sign in"
            android:textAlignment="center"
            android:textColor="@color/azul1"
            android:textSize="64sp"
            android:layout_marginTop="70dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_local_post_office_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/azul1"
            android:maxLength="60"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logging_field_background"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_semibold"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/azul1"
            android:maxLength="60"/>

        <CheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="Recuérdame"
            android:textColor="@color/azul1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/azul1"
            android:text="Iniciar sesión"
             />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvForgetPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="¿Has olvidado tu contraseña?"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@color/azul1"/>

    </LinearLayout>

</RelativeLayout>